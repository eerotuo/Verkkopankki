<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewUser">

    <TextView
        android:id="@+id/textViewN2"
        android:layout_width="117dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="128dp"
        android:text="Oma nimi"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/editTextN1"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewN1" />

    <TextView
        android:id="@+id/textViewN4"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewN2"
        android:layout_alignStart="@+id/textViewN2"
        android:layout_marginStart="2dp"
        android:layout_marginTop="13dp"
        android:text="Osoite"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewN3" />

    <TextView
        android:id="@+id/textViewN3"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewN4"
        android:layout_alignStart="@+id/textViewN4"
        android:layout_marginStart="0dp"
        android:layout_marginTop="29dp"
        android:text="Kaupunki"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/editTextN2"
        app:layout_constraintHorizontal_bias="0.42"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewN2" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="108dp"
        android:layout_marginEnd="94dp"
        android:layout_marginBottom="42dp"
        android:onClick="saveUser1"
        android:text="Tallenna muutokset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextN1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="124dp"
        android:ems="10"
        android:hint="Nimi"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewN1"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <EditText
        android:id="@+id/editTextN3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextN2"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="0dp"
        android:ems="10"
        android:hint="City"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.813"
        app:layout_constraintStart_toEndOf="@+id/textViewN4"
        tools:layout_editor_absoluteY="198dp" />

    <EditText
        android:id="@+id/editTextN2"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_below="@+id/editTextN1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="0dp"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/editTextN3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextN1" />

    <TextView
        android:id="@+id/textViewN1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Lisää käyttäjätiedot"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <TextView
        android:id="@+id/textViewN5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewN3"
        android:layout_alignStart="@+id/textViewN3"
        android:layout_marginStart="6dp"
        android:layout_marginTop="20dp"
        android:text="Salasana"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewN4"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/editTextN4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextN3"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="9dp"
        android:ems="10"
        android:hint="Salasana"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="257dp" />

</RelativeLayout>